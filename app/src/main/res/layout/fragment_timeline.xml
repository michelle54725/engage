<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacherclassactivity.TimelineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/magicWordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/magic_word_420"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="64dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:paddingBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/mEngagedPieChart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/magicWordText" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/mEngagedPieChart"
            android:layout_width="0dp"
            android:layout_height="204dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mDisengagedPieChart"
            app:layout_constraintTop_toBottomOf="@+id/chart"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/mDisengagedPieChart"
            android:layout_width="0dp"
            android:layout_height="204dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/mEngagedPieChart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mEngagedPieChart"
            app:layout_constraintTop_toTopOf="@+id/mEngagedPieChart"/>

        <SeekBar
            android:id="@+id/mVerticalSeekBar"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="244dp"
            android:foregroundGravity="left"
            android:max="100"
            android:progress="50"
            android:rotation="270"
            android:thumb="@drawable/slider"
            app:layout_constraintBottom_toBottomOf="@+id/chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart" />

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/mEngagedPieChart"
            app:layout_constraintEnd_toStartOf="@+id/chart"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/chart"
            app:layout_constraintTop_toBottomOf="@+id/chart" />

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/fragmentclass_endTimeText_marginEnd"
            android:layout_marginRight="@dimen/fragmentclass_endTimeText_marginRight"
            android:text=""
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/mEngagedPieChart"
            app:layout_constraintEnd_toEndOf="@+id/chart"
            app:layout_constraintHorizontal_bias="0.948"
            app:layout_constraintStart_toEndOf = "@+id/startTimeText"
            app:layout_constraintTop_toBottomOf="@+id/chart" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>