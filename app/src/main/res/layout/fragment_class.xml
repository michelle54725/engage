<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.ClassFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/fragmentclass_linechart_marginTop"
            android:layout_marginBottom="@dimen/fragmentclass_linechart_marginBottom"
            android:layout_marginRight="@dimen/fragmentclass_linechart_marginEnd"
            android:layout_marginLeft="@dimen/fragmentclass_linechart_marginEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circleWrapper"
            app:layout_constraintStart_toEndOf="@+id/thumbsUpIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/thumbsUpIcon"
            android:layout_width="@dimen/fragmentclass_thumbsIconWidth"
            android:layout_height="@dimen/fragmentclass_thumbsIconHeight"
            android:layout_marginTop="@dimen/fragmentclass_thumbsup_marginTop"
            android:layout_marginLeft="@dimen/fragmentclass_thumbsup_marginLeft"
            android:src="@drawable/thumbs_up"
            app:layout_constraintEnd_toStartOf="@+id/chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chart" />

        <ImageView
            android:id="@+id/thumbsDownIcon"
            android:layout_width="@dimen/fragmentclass_thumbsIconWidth"
            android:layout_height="@dimen/fragmentclass_thumbsIconHeight"
            android:layout_marginBottom="@dimen/fragmentclass_thumbsdown_marginBottom"
            android:src="@drawable/thumbs_down"
            app:layout_constraintBottom_toBottomOf="@+id/chart"
            app:layout_constraintEnd_toEndOf="@+id/thumbsUpIcon"
            app:layout_constraintStart_toStartOf="@+id/thumbsUpIcon" />

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fragmentclass_endTimeText_marginEnd"
            android:layout_marginRight="@dimen/fragmentclass_endTimeText_marginRight"
            android:text="TextView"
            android:textSize="14sp"
            app:fontFamily="@font/quicksand_bold"
            app:layout_constraintEnd_toEndOf="@+id/chart"
            app:layout_constraintTop_toTopOf="@+id/startTimeText" />

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragmentclass_endTimeText_marginTop"
            android:text="TextView"
            android:textSize="14sp"
            app:fontFamily="@font/quicksand_bold"
            app:layout_constraintTop_toBottomOf="@id/chart"
            app:layout_constraintBottom_toBottomOf="@id/endTimeText"
            app:layout_constraintStart_toStartOf="@+id/chart" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/circleWrapper"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/fragmentclass_circleWrapper_marginRight"
            android:background="@drawable/dashed_circle"
            android:visibility="visible"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/chart">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/circleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragmentclass_circleContent_margin"
                android:layout_marginEnd="@dimen/fragmentclass_circleContent_margin"
                android:layout_marginLeft="@dimen/fragmentclass_circleContent_margin"
                android:layout_marginRight="@dimen/fragmentclass_circleContent_margin"
                android:layout_marginStart="@dimen/fragmentclass_circleContent_margin"
                android:layout_marginTop="@dimen/fragmentclass_circleContent_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/engagedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:fontFamily="@font/quicksand_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/engagedLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fragmentclass_engagedLabel_margin"
                    android:layout_marginLeft="@dimen/fragmentclass_engagedLabel_margin"
                    android:layout_marginRight="@dimen/fragmentclass_engagedLabel_margin"
                    android:layout_marginStart="@dimen/fragmentclass_engagedLabel_margin"
                    android:text="engaged"
                    android:textColor="@android:color/white"
                    app:fontFamily="@font/quicksand_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engagedCount" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>